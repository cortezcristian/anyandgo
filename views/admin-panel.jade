extends layout-admin

block content
  .board-container.container-fluid(ng-app='anyandgoApp')
    div.loadingmessage(loadingmessage).animated.flipInX
      .preloading-message.animated.bounceInUp
        i.fa.fa-refresh.fa-spin
    .row(ng-cloak)
      .sidebar-con.col-xs-1.col-sm-1.col-md-3#side-col
        div(style="height: 46px;background:#222;")
          a.collapser(href="javascript:",style="display:block;background-color: #333;")
            i.fa.fa-chevron-left
            i.fa.fa-chevron-right.hide
        include ./partials/admin-sidebar
      .main-con.col-xs-11.col-sm-11.col-md-9#content-col
        .panel(ng-view)
          
